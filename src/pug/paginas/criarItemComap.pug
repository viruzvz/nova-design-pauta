.row
  .col-md-12
    .panel.panel-default
      .s-bar.s-bar--background
        .ArrangeFlex
          .ArrangeFlex-sizeFit.Box.Box--lg
            i.fa.fa-plus
          .ArrangeFlex-sizeFill.Box--y.Box--lg
            h2.milli.s-bar--text
              strong Criar item comap
          .ArrangeFlex-sizeFit.Box--y.Box--lg.s-bar--columnLeft
            a.toggle.eta.btn-sBar(href='#collapse-box' data-toggle="collapse" aria-expanded='true')
              i.fa.fa-chevron-up
              i.fa.fa-chevron-down
      .panel-body#collapse-box.in
        // Responsive Select, on only in xs
        .visible-xs
          .form-group
            label(for='mySelect') Selecione um tipo
            select.mySelect.select-nav.form-control
              mixin option(value, name)
                option(value=value) #{name}
              +option('#conteudo', 'Conteúdo')
              +option('#briefing', 'Briefing')
              +option('#resultados', 'Resultados')

        // Nav tabs
        ul#myTab.nav.nav-tabs.hidden-xs(role='tablist')
          li.active(role='presentation')
            a(href='#conteudo', aria-controls='conteudo', role='tab', data-toggle='tab') Conteúdo
          li(role='presentation')
            a(href='#briefing', aria-controls='briefing', role='tab', data-toggle='tab') Briefing
          li(role='presentation')
            a(href='#resultados', aria-controls='resultados', role='tab', data-toggle='tab') Resultados

        // Tab panes
        .tab-content.Box.Box--lg.Box--y
          #conteudo.tab-pane.active(role='tabpanel')
            form(name='criarItemComapForm')
              .form-group
                label(for='trabalho')
                  | Trabalho
                  span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
                input#trabalho.form-control(type='text', name='trabalho', required)
              .form-group
                label(for='cliente')
                  | Cliente
                  span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
                .row
                  .col-md-4
                    select#cliente.form-control(name='cliente', required)
                      option(value='') Selecionar
                      option(value='Advocacia') Advocacia
              .form-group
                label(for='contato')
                  | Contato
                  span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
                input#contato.form-control(type='text', name='contato', required)
              .form-group
                label(for='telefones')
                  | Telefones
                  span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
                .row
                  .col-md-6.col-sm-6
                    input#telefones.form-control(type='text', name='telefones', required)
                  .col-md-4.col-sm-4
                    select#tipo-fone.form-control(name='tipo-fone', required)
                      option(value='') Selecionar
                      option(value='Ramal') Ramal
                  .col-md-2.col-sm-2
                    button.btn.btn-success(type='button', name='adicionar', data-toggle='tooltip', title='Adicionar Item')
                      i.fa.fa-plus
                    button.btn.btn-danger(type='button', name='remover', data-toggle='tooltip', title='Excluir Item')
                      i.fa.fa-times
              .form-group
                label(for='e-mails')
                  | E-mails
                  span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
                .row
                  .col-md-6.col-sm-6
                    input#email.form-control(type='email', name='email', required)
                  .col-md-4.col-sm-4
                    select#tipo-email.form-control(name='tipo-email', required)
                      option(value='') Selecionar
                      option(value='Ramal') Comercial
                  .col-md-2.col-sm-2
                    button.btn.btn-success(type='button', name='adicionar', data-toggle='tooltip', title='Adicionar Item')
                      i.fa.fa-plus
