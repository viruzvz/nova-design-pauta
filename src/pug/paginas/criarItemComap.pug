                      i.fa.fa-times
              .form-group
                label(for='atendimento')
                  | Atendimento
                  span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
                .row
                  .col-md-4
                    select#atendimento.form-control(name='atendimento', required)
