.row
  .col-md-12
    .panel.panel-default
      .s-bar.s-bar--background
        .ArrangeFlex
          .ArrangeFlex-sizeFit.Box.Box--lg
            i.fa.fa-plus
          .ArrangeFlex-sizeFill.Box--y.Box--lg
            h2.milli.s-bar--text
              strong Criar Item de Pauta Geral da Agência
          .ArrangeFlex-sizeFit.Box--y.Box--lg.s-bar--columnLeft
            a.toggle.eta.btn-sBar(href='#collapse-box' data-toggle="collapse" aria-expanded='true')
              i.fa.fa-chevron-up
              i.fa.fa-chevron-down
      .panel-body#collapse-box.in 
        form(name='criarItemPautaGeralAgenciaForm')
          .form-group
            .row
              .col-md-3.col-xs-8
                label(for='dataProducao') 
                  | Data de producao 
                  span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *

                .input-group.date(data-provide='datepicker', data-date-format="dd/mm/yyyy")
                  input#dataProducao.form-control(type='text', placeholder='dd/mm/aaaa', required)
                  .input-group-addon
                    span.fa.fa-calendar
          .form-group
            label(for='horarioaipAgencia')
              | Horário 
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            .row
              .col-md-2.col-xs-4.dot-timer
                select#horarioaipAgencia.form-control(name='hh', required)
                  option(value='') 00
                  option(value='08') 08
              .col-md-2.col-xs-4
                select.form-control(name='mm', required)
                  option(value='') 00
                  option(value='01') 01
          .form-group
            label(for='localaipAgencia') Local
            input#localaipAgencia.form-control(type='text', name='local')          
          .form-group
            label(for='assuntoaipAgencia') Assunto 
            textarea#assuntoaipAgencia.form-control(rows='2')
          .form-group
            label(for='descricaoTinyMce') Descrição - Veículo
            textarea#descricaoTinyMce.descricaoTinyMce.tinyMce.form-control(name='html', cols='100', rows='10')
          .form-group
            label(for='ordenacaoaipAgencia') 
              | Projeto de lei 
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            input#ordenacaoaipAgencia.form-control(type='text', name='ordenacaoaipAgencia', required)    
          .form-group
            label(for='itensproducaorelacionados') Itens de produção relacionados
            input#itensproducaorelacionados.form-control(type='text', name='itensproducaorelacionados') 
          .form-group
            label(for='reporters') Repórter(es) 
          .form-group
            label(for='fotografos') Fotógrafo(s) 
          .form-group
            label(for='reporters') Observação da Pauta/Reportagem 
            textarea#reporters.form-control(row='2', name='reporters')
          .form-group
            label(for='fotografos') Observações de Fotografia
            textarea#fotografos.form-control(row='2', name='fotografos')
          .form-group
            label(for='noticiasGeradas') Notícias geradas
            textarea#noticiasGeradas.form-control(row='2', name='noticiasGeradas')
          .form-group
            label(for='editoria')
              | Editoria 
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            select#editoria.form-control(name='editoria', required)
              option(value='') Selecionar
              option(value='Artigo') Artigo
          .form-group.pull-right
            button.btn.btn-primary(type='submit') Criar
            | &nbsp;
            a.btn.btn-default(href='paginaInicial--itemPautaGeral.html', data-dismiss='modal') Cancelar

