  .ArrangeFlex-sizeFit.dropdown

    ul.nav.navbar-nav.pull-right
      mixin item( date, texto, user, href, label, status)
        div
          p
            small #{date}
            if label
              span.label.pull-right(class=status) #{label}
            else
          p
            if href
              a(href=href) #{texto}
            else
              | #{texto}
          .Flag
            .Flag-figure.Flag-Figure--maxwidth-xs
              img.img-responsive.img-circle(src="assets/img/avatar.jpg")
            .Flag-body
              a(href='editarPerfil.html'): small #{user}
      mixin botoes(href, icon, texto)
        li(class="+white")
          a.normalis(href=href, class="+senado")
            .Box.Box--y
              i(class=icon).fa
              strong  #{texto}
