mixin mensagem(flag, tempo)
  li.Box(class="+white")
    .Flag
      .Flag-figure
        img.u-rounded(src='assets/img/avatar.jpg' height=40)
      .Flag-body
        if flag
          span.label.label-info.pull-right NOVO
        a(href="#"): strong Nova mensagem
        .small.text-muted: em #{tempo}

ul.dropdown-menu.dropdown-menu--bar.dropdown-menu--md
  li.Box.Box--lg
    .Segment.Segments.Segments--md
      div: strong Mensagens
      .progress.progress--thin.progress--light
        .progress-bar.progress-bar-success(
          role='progressbar', aria-valuenow='40', aria-valuemin='0', aria-valuemax='100', style='width: 40%'
        )
          span.sr-only 40% Completo (sucesso)

  +mensagem(true, "há 1 minuto atrás")
  +mensagem(true, "há 2 horás atrás")
  +mensagem()
  +mensagem()
  +mensagem()
  +mensagem()

  li.Box.Box--lg(class="+white")
    .text-center Ver todas as mensagens
