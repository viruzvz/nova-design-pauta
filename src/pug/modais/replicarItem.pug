// Modal replicarItem (Carregado em; Item de Pauta Geral, )
#replicarItem.modal.fade(tabindex='-1', role='dialog', aria-labelledby='replicarItemLabel')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
        h4#replicarItemLabel.modal-title 
          span.fa.fa-clone
          |  Replicar item de pauta

      .modal-body
        form(name='replicarItemModalForm')
          .form-group
            label(for='data-replicarItem') Data
            input#data-replicarItem.form-control(type='text', name='data-replicarItem', placeholder='deixar em branco para data de hoje')

      .modal-footer
        button.btn.btn-primary(type='button') Replicar
        button.btn.btn-default(type='button', data-dismiss='modal') Cancelar